<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnCall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btnEmail"
        android:background="@drawable/call" />
    <Button
        android:id="@+id/btnEmail"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="115dp"
        android:background="@drawable/ic_launcher_email" />
    <Button
        android:id="@+id/btnSms"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/btnCall"
        android:background="@drawable/sms" />

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/btnSms"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/btnSms"
        android:background="@drawable/ic_launcher_delete" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customEmailView"
    android:layout_width="330dp"
    android:layout_height="240dp">

    <EditText
        android:id="@+id/edtSubject"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:inputType="textEmailSubject"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/tvEmailSubject"
        android:layout_alignBottom="@+id/tvEmailSubject"
        android:layout_toEndOf="@+id/tvEmailSubject" />

    <TextView
        android:id="@+id/tvEmailSubject"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="Subject: "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvEmailBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write here:"
        android:fontFamily="serif"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@+id/tvEmailSubject"
        android:layout_alignStart="@+id/tvEmailSubject"
        android:layout_marginTop="28dp" />

    <EditText
        android:id="@+id/edtEmailBody"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/Base.Widget.AppCompat.EditText"
        android:inputType="textEmailSubject"
        android:hint="Email message"
        android:layout_below="@+id/tvEmailBody"
        android:layout_alignStart="@+id/tvEmailBody"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/edtSubject" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@+id/edtEmailBody"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>